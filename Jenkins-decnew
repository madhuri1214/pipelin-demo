pipeline{
    agent any
    environment{
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'javahome2', url: 'https://github.com/madhuri1214/pipelin-demo.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
            }
        }
        stage("deploy-dev"){
            steps{
                sshagent(['tomcat-new']) {
                sh "scp -o StrictHostKeyChecking=no webapp/target/webapp.war ubuntu@172.31.20.239:/root/apache-tomcat-9.0.63/webapps"
                    
            }
            
            }
        }
    }
}
